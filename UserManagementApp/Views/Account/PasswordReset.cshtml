@model ResetPasswordViewModel
@{
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="auth-panel">
            <div class="auth-panel-inner">
                <div style="height: 100px;" class="flex-btw">
                    <h2>Reset Your Password?</h2>
                    <div><a asp-action="Index" asp-controller="home">back to home</a></div>
                </div>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-action="ResetPassword" asp-controller="Account">
                    <p><input asp-for="Email" placeholder="Email" autocomplete="off" /></p>
                    <p><input asp-for="Token" placeholder="Token" autocomplete="off" hidden /></p>
                    <p><input asp-for="NewPassword" placeholder="New Password" autocomplete="off" /></p>

                    <button type="submit" class="btn btn-primary">Send</button>
                </form>


            </div>
        </div>
    </main>
</div>
