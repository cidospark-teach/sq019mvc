@model UserToLoginViewModel
@{
    var returnUrl = ViewBag.ReturnUrl;
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="auth-panel">
            <div class="auth-panel-inner">
                <div style="height: 100px;" class="flex-btw">
                    <h2>Login here...</h2>
                    <div><a asp-action="Index" asp-controller="home">back to home</a></div>
                </div>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl = "@returnUrl" >
                    <p><input asp-for="Email" placeholder="Email" autocomplete="off" /></p>
                    <p><input asp-for="Password" placeholder="Password" autocomplete="off" /></p>
                    <div class="forgot-password-panel flex-btw" style="height: 100px;">
                        <div><input asp-for="RememberMe" /> RememberMe</div>
                        <div><a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a></div>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>

                <p>
                    Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a>
                </p>

            </div>
        </div>
    </main>
</div>
