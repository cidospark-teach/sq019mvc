<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UserManagementApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="nav-div">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="ManageUser">Dashboard</a>
                    </li>
                    <li class="pull-to-right">
                        @if (_signInMgr.IsSignedIn(User))
                        {
                            <a asp-action="Logout" asp-controller="Account">
                                @{
                                    var user = _userMgr.GetUserAsync(User).Result;
                                }
                                Logout @user.FirstName
                            </a>
                        }else
                        {
                            <a class="btn btn-primary" asp-action="Login" asp-controller="Account">
                                Login
                            </a>
                            
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
